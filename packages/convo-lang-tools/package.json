{
    "name": "convo-lang-tools",
    "displayName": "convo-lang",
    "description": "A conversational language ðŸ¤“",
    "version": "0.8.0",
    "type": "commonjs",
    "sideEffects": false,
    "publisher": "IYIO",
    "icon": "assets/convo.png",
    "keywords": [
        "prompt",
        "prompt-engineering",
        "open-ai",
        "ai",
        "convo-lang"
    ],
    "engines": {
        "vscode": "^1.75.0"
    },
    "activationEvents": [
        "onLanguage:convo.source"
    ],
    "license": "Apache-2.0",
    "main": "./lsp/client/out/extension",
    "repository": {
        "type": "git",
        "url": "https://github.com/convo-lang/convo-lang.git"
    },
    "contributes": {
        "languages": [
            {
                "id": "source.convo",
                "aliases": [
                    "Convo",
                    "convo"
                ],
                "extensions": [
                    ".convo"
                ],
                "firstLine": "^[ \\t]*(>[ \\t]\\w+|@\\w+)",
                "configuration": "./convo-language-configuration.json",
                "icon": {
                    "light": "assets/convo-icon.png",
                    "dark": "assets/convo-icon.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "source.convo",
                "scopeName": "source.convo",
                "path": "./syntaxes/convo.tmLanguage.json"
            },
            {
                "injectTo": [
                    "source.js",
                    "source.ts",
                    "source.jsx",
                    "source.js.jsx",
                    "source.tsx"
                ],
                "scopeName": "convo-js",
                "path": "./syntaxes/convo-js.json",
                "embeddedLanguages": {
                    "source.convo": "convo",
                    "meta.embedded.line.ts": "typescript"
                }
            },
            {
                "injectTo": [
                    "source.python"
                ],
                "scopeName": "convo-python",
                "path": "./syntaxes/convo-python.json",
                "embeddedLanguages": {
                    "source.convo": "convo"
                }
            },
            {
                "injectTo": [
                    "text.html.markdown"
                ],
                "scopeName": "convo-md",
                "path": "./syntaxes/convo-md.json",
                "embeddedLanguages": {
                    "source.convo": "convo"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "convo.complete",
                    "when": "resourceLangId == source.convo",
                    "group": "navigation@1"
                },
                {
                    "command": "convo.open-settings",
                    "when": "resourceLangId == source.convo",
                    "group": "navigation@2"
                },
                {
                    "command": "convo.split",
                    "when": "resourceLangId == source.convo",
                    "group": "navigation@3"
                },
                {
                    "command": "convo.convert",
                    "when": "resourceLangId == source.convo",
                    "group": "navigation@4"
                },
                {
                    "command": "convo.text",
                    "when": "resourceLangId == source.convo",
                    "group": "navigation@5"
                },
                {
                    "command": "convo.flat",
                    "when": "resourceLangId == source.convo",
                    "group": "navigation@6"
                },
                {
                    "command": "convo.vars",
                    "when": "resourceLangId == source.convo",
                    "group": "navigation@7"
                },
                {
                    "command": "convo.list-models",
                    "when": "resourceLangId == source.convo",
                    "group": "navigation@9"
                }
            ],
            "view/title": [
                {
                    "command": "convo.refresh-make-targets",
                    "when": "view == convoMakeBuild",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "convo.make",
                    "when": "view == convoMakeBuild && viewItem == build",
                    "group": "inline"
                },
                {
                    "command": "convo.make-stop",
                    "when": "view == convoMakeBuild && viewItem == build-active",
                    "group": "inline"
                },
                {
                    "command": "convo.make-open",
                    "when": "view == convoMakeBuild && viewItem =~ /^build/",
                    "group": "inline"
                },
                {
                    "command": "convo.make-target-open",
                    "when": "view == convoMakeBuild && viewItem =~ /^target-.*-exists/",
                    "group": "inline"
                },
                {
                    "command": "convo.make-target-delete",
                    "when": "view == convoMakeBuild && viewItem =~ /^target-.*-exists.*-preview/",
                    "group": "inline"
                },
                {
                    "command": "convo.make-target-single",
                    "when": "view == convoMakeBuild && viewItem =~ /^target.*-preview/",
                    "group": "inline"
                }
            ]
        },
        "commands": [
            {
                "command": "convo.complete",
                "title": "Convo: Complete - Submits conversation to LLM and append response",
                "shortTitle": "Convo: Complete",
                "icon": "$(play)"
            },
            {
                "command": "convo.refresh-make-targets",
                "title": "Convo: Refresh make targets",
                "icon": "$(refresh)"
            },
            {
                "command": "convo.parse",
                "title": "Convo: Parse - Parses conversation returning message objects",
                "shortTitle": "Convo: Parse"
            },
            {
                "command": "convo.text",
                "title": "Convo: Flatten - View of conversation with all expressions evaluated",
                "shortTitle": "Convo: Flatten",
                "icon": "$(chrome-restore)"
            },
            {
                "command": "convo.flat",
                "title": "Convo: Message Objects - View of conversation as JSON message object. Useful for UI bindings.",
                "shortTitle": "Convo: Message Objects",
                "icon": "$(code-review)"
            },
            {
                "command": "convo.vars",
                "title": "Convo: Vars - Evaluates conversation and displaying resulting variables",
                "shortTitle": "Convo: Vars",
                "icon": "$(symbol-misc)"
            },
            {
                "command": "convo.convert",
                "title": "Convo: Convert - Converts the conversation into the native format of the target LLM",
                "shortTitle": "Convo: Convert",
                "icon": "$(json)"
            },
            {
                "command": "convo.split",
                "title": "Convo: Fork - Creates a copy of the conversation and saves it to a new file",
                "shortTitle": "Convo: Fork",
                "icon": "$(repo-forked)"
            },
            {
                "command": "convo.split-complete",
                "title": "Convo: Complete Fork - Creates a fork of the conversation and submits it to the LLM",
                "shortTitle": "Convo: Complete Fork"
            },
            {
                "command": "convo.make-target-open",
                "title": "Convo: Open Make Target",
                "icon": "$(folder-opened)"
            },
            {
                "command": "convo.make-target-single",
                "title": "Convo: Make Single File",
                "icon": "$(play)"
            },
            {
                "command": "convo.make-target-delete",
                "title": "Convo: Delete Make Target",
                "icon": "$(trash)"
            },
            {
                "command": "convo.make-open",
                "title": "Convo: Make Open",
                "icon": "$(folder-opened)"
            },
            {
                "command": "convo.make",
                "title": "Convo: Make - Runs the Convo Make build system",
                "shortTitle": "Convo: Make",
                "icon": "$(play)"
            },
            {
                "command": "convo.make-stop",
                "title": "Convo: Make Stop - Stop active make",
                "shortTitle": "Convo: Make Stop",
                "icon": "$(debug-stop)"
            },
            {
                "command": "convo.make-targets",
                "title": "Convo: Make Targets - Parses a convo make file and displays its targets",
                "shortTitle": "Convo: Make Targets",
                "icon": "$(combine)"
            },
            {
                "command": "convo.list-models",
                "title": "Convo: List Models - Lists registered LLM models",
                "shortTitle": "Convo: List Models",
                "icon": "$(list-unordered)"
            },
            {
                "command": "convo.open-settings",
                "title": "Convo: Open Settings",
                "icon": "$(tools)"
            },
            {
                "command": "convo.new",
                "title": "Convo: New File"
            },
            {
                "command": "convo.modules",
                "title": "Convo: Modules",
                "icon": "$(extensions)"
            }
        ],
        "keybindings": [
            {
                "command": "convo.complete",
                "key": "ctrl+r",
                "mac": "cmd+r",
                "when": "editorTextFocus && editorLangId == 'source.convo'"
            },
            {
                "command": "convo.split-complete",
                "key": "ctrl+shift+r",
                "mac": "cmd+shift+r",
                "when": "editorTextFocus && editorLangId == 'source.convo'"
            },
            {
                "command": "convo.new",
                "key": "shift+alt+ctrl+n",
                "mac": "shift+alt+cmd+n"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Convo-Lang",
            "properties": {
                "convo.defaultModel": {
                    "type": "string",
                    "default": "gpt-4.1",
                    "description": "Default AI model to use for completions",
                    "order": 1
                },
                "convo.openAiBaseUrl": {
                    "type": "string",
                    "default": "https://api.openai.com",
                    "description": "API Base URL to an OpenAI compatible API",
                    "order": 2
                },
                "convo.openAiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "OpenAI API key for authentication",
                    "order": 3
                },
                "convo.awsBedrockProfile": {
                    "type": "string",
                    "default": "",
                    "description": "AWS Bedrock profile name for authentication",
                    "order": 4
                },
                "convo.awsBedrockApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "AWS Bedrock API key for authentication",
                    "order": 5
                },
                "convo.awsBedrockRegion": {
                    "type": "string",
                    "default": "us-east-1",
                    "description": "AWS region to use with for Bedrock",
                    "order": 6
                },
                "convo.openRouterBaseUrl": {
                    "type": "string",
                    "default": "https://openrouter.ai/api",
                    "description": "API Base URL to OpenRouter",
                    "order": 7
                },
                "convo.openRouterApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "OpenRouter API key for authentication",
                    "order": 8
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "convo-lang-tools",
                    "title": "Convo-Lang",
                    "icon": "$(github-action)"
                }
            ]
        },
        "views": {
            "convo-lang-tools": [
                {
                    "id": "convoMakeBuild",
                    "name": "Make Build",
                    "icon": "$(github-action)"
                }
            ]
        }
    }
}