{
    "name": "convo-lang-tools",
    "displayName": "convo-lang",
    "description": "A conversational language ðŸ¤“",
    "version": "0.7.45",
    "type": "commonjs",
    "sideEffects": false,
    "publisher": "IYIO",
    "icon": "assets/convo.png",
    "keywords": [
        "prompt",
        "prompt-engineering",
        "open-ai",
        "ai",
        "convo-lang"
    ],
    "engines": {
        "vscode": "^1.75.0"
    },
    "activationEvents": [
        "onLanguage:convo.source"
    ],
    "license": "Apache-2.0",
    "main": "./lsp/client/out/extension",
    "repository": {
        "type": "git",
        "url": "https://github.com/convo-lang/convo-lang.git"
    },
    "contributes": {
        "languages": [
            {
                "id": "source.convo",
                "aliases": [
                    "Convo",
                    "convo"
                ],
                "extensions": [
                    ".convo"
                ],
                "firstLine": "^[ \\t]*(>[ \\t]\\w+|@\\w+)",
                "configuration": "./convo-language-configuration.json",
                "icon": {
                    "light": "assets/convo-icon.png",
                    "dark": "assets/convo-icon.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "source.convo",
                "scopeName": "source.convo",
                "path": "./syntaxes/convo.tmLanguage.json"
            },
            {
                "injectTo": [
                    "source.js",
                    "source.ts",
                    "source.jsx",
                    "source.js.jsx",
                    "source.tsx"
                ],
                "scopeName": "convo-js",
                "path": "./syntaxes/convo-js.json",
                "embeddedLanguages": {
                    "source.convo": "convo",
                    "meta.embedded.line.ts": "typescript"
                }
            },
            {
                "injectTo": [
                    "source.python"
                ],
                "scopeName": "convo-python",
                "path": "./syntaxes/convo-python.json",
                "embeddedLanguages": {
                    "source.convo": "convo"
                }
            },
            {
                "injectTo": [
                    "text.html.markdown"
                ],
                "scopeName": "convo-md",
                "path": "./syntaxes/convo-md.json",
                "embeddedLanguages": {
                    "source.convo": "convo"
                }
            }
        ],
        "commands": [
            {
                "command": "convo.complete",
                "title": "Complete Convo",
                "shortTitle": "convo"
            },
            {
                "command": "convo.parse",
                "title": "Parse Convo"
            },
            {
                "command": "convo.text",
                "title": "Flatten Convo"
            },
            {
                "command": "convo.vars",
                "title": "Convo Vars"
            },
            {
                "command": "convo.convert",
                "title": "Convert Convo"
            },
            {
                "command": "convo.split-complete",
                "title": "Convert Convo in new file"
            },
            {
                "command": "convo.list-models",
                "title": "List Convo Models"
            }
        ],
        "keybindings": [
            {
                "command": "convo.complete",
                "key": "ctrl+r",
                "mac": "cmd+r",
                "when": "editorTextFocus && editorLangId == 'source.convo'"
            },
            {
                "command": "convo.split-complete",
                "key": "ctrl+shift+r",
                "mac": "cmd+shift+r",
                "when": "editorTextFocus && editorLangId == 'source.convo'"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Convo-Lang",
            "properties": {
                "convo.defaultModel": {
                    "type": "string",
                    "default": "gpt-4.1",
                    "description": "Default AI model to use for completions",
                    "order": 1
                },
                "convo.openAiBaseUrl": {
                    "type": "string",
                    "default": "https://api.openai.com",
                    "description": "API Base URL to an OpenAI compatible API",
                    "order": 2
                },
                "convo.openAiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "OpenAI API key for authentication",
                    "order": 3
                },
                "convo.awsBedrockProfile": {
                    "type": "string",
                    "default": "",
                    "description": "AWS Bedrock profile name for authentication",
                    "order": 4
                },
                "convo.awsBedrockApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "AWS Bedrock API key for authentication",
                    "order": 5
                },
                "convo.awsBedrockRegion": {
                    "type": "string",
                    "default": "us-east-1",
                    "description": "AWS region to use with for Bedrock",
                    "order": 5
                }
            }
        }
    }
}
